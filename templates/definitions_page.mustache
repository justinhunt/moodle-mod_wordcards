        <span class="wordcards_display_options">
            <button class="wordcards_display_option event_grid btn btn-primary" id="btn" title="{{#str}}grid, mod_wordcards{{/str}}">
                <i class="fa fa-th"></i>
            </button>
            <button class="wordcards_display_option event_flashcards btn btn-outline-primary" title="{{#str}}flashcards, mod_wordcards{{/str}}">
