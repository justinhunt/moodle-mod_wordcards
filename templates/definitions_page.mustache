            </button>
        </span>
</div-->

    <div class="terms clearfix definition_flashcards">
      <!--start --->
      <div class="df_fl">
         <div class="df_fl_control" style="text-align: center;">
             <button id="Prev"  style="float: left;" title="Prev"></button>
             <button id="Next" style="float: right;" title="Next"></button>
         </div>
         <ul class="definition_flashcards_ul">
            {{#definitions}}
            <li class="flip-card">
               <div class="wc-faces flip-card-inner">
                  <!-- front face -->
                  <div class="flip-card-front" data-face="term">
                     {{>mod_wordcards/my_words_button}}
                     <div class="term" data-termid="{{id}}">
                        <div class="term-title">{{term}}</div>
                        <i id="card-audio" style="cursor:pointer;" data-modelaudio="{{audio}}" data-tts="{{term}}" data-ttsvoice="{{ttsvoice}}" class="fa fa-volume-up definition-play-tts"></i>
                     </div>
                     {{#image}}
                        <div class="term-image">
                           <img src="{{image}}" class="flash_img" alt=""/>
                        </div>
                     {{/image}}
                  </div>
                  <!-- back face -->
                  <div class="flip-card-back" data-face="details">
                     {{>mod_wordcards/my_words_button}}
                     <div class="term {{#seen}}term-seen{{/seen}}" data-termid="{{id}}">
                        <div class="term-title">
                           {{{definition}}}
                        </div>
                        <!--div class="blackbox"></div-->
                        <div class="term-video">
                           {{>mod_wordcards/youglish}}
                        </div>
                     </div>
                  </div>
               </div>
            </li>
            {{/definitions}}
         </ul>
         <div class="wc_cardsprogress"> -- / -- </div>
         </div>

          <!--end --->
       </div>

       <div id="definitions-page-{{uniqid}}" class="definitions-container">
    <div class="mt-3">
    <div class="terms clearfix definition_grid">
       {{#definitions}}
       <div class="term-wrapper">
          <div class="term {{#seen}}term-seen{{/seen}}" data-termid="{{id}}">
             <div class="term-header">
                 {{>mod_wordcards/my_words_button}}
                <div class="term-title">
                    {{term}}
                    <i style="cursor:pointer;" data-modelaudio="{{audio}}" data-tts="{{term}}" data-ttsvoice="{{ttsvoice}}" class="fa fa-volume-up definition-play-tts"></i>
                </div>
                {{#model_sentence}}
                <div class="term-modelsentence">
                   <span style="cursor:pointer;" data-modelaudio="{{model_sentence_audio}}" data-tts="{{model_sentence}}" data-ttsvoice="{{ttsvoice}}" class="model-sentence-play-tts"> {{model_sentence}}</span>
                </div>
                {{/model_sentence}}
             </div>
             <div class="term-body">
                {{{definition}}}
             </div>
          </div>

       </div>
       {{/definitions}}
    </div>
    
       <div class="page-footer">
        {{#isstepsmode}}
           {{#nexturl}}
               <button data-href="{{{nexturl}}}" data-action="{{nextaction}}" class="definitions-next btn btn-primary btn-lg btn-block">
                   {{nextbuttontext}}  <i class="fa fa-arrow-right"></i>
               </button>
           {{/nexturl}}
        {{/isstepsmode}}
          <audio id="poodll_vocabplayer"></audio>
       </div>
    </div>
</div>